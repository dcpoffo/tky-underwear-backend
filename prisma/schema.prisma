generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id          Int     @id @default(autoincrement())  
  descricao   String  @db.VarChar(50)
  tipo        String  @db.VarChar(8)
  modelagem   String  @db.VarChar(8)
  grade       String  @db.VarChar(3)
  qtdEstoque  Int? @default(0)
  barra       String? @db.VarChar(13)
  itensVenda ItensVenda[]
  movimentacoesEstoque MovimentaEstoque[]

  @@map("produtos")
}

model Movimentacao {
  id          Int    @id @default(autoincrement())
  label       String @db.VarChar(50)
  type        String @db.VarChar(1)
  valor       Float
  paymentType String
  date        String

  @@map("movimentacoes")
}

model MovimentaEstoque {
  id          Int @id @default(autoincrement())
  // 0 - Entrada 
  // 1 - Saida
  tipo        String @db.VarChar(1)
  // Movimentação de ENTRADA no estoque
  // Movimentação de SAIDA no estoquer
  descricao   String @db.VarChar(50)
  data        DateTime @default(now())
  quantidade  Int
  produto Produto @relation(fields: [idProduto],  references: [id])
  idProduto   Int

  @@map("movimentaEstoque")
}

model Venda {
  id           Int          @id @default(autoincrement())
  data         DateTime @default(now())
  valorVenda   Float
  itensDaVenda ItensVenda[]

  @@map("venda")
}

model ItensVenda {
  id            Int    @id @default(autoincrement())
  idVenda       Int
  idProduto     Int
  quantidade    Int
  valorUnitario Float
  total         Float
  produto       Produto @relation(fields: [idProduto], references: [id])
  venda         Venda  @relation(fields: [idVenda], references: [id])

  @@map("itensVenda")
}